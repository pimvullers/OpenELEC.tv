+      pp->ClearRef(pic.videoSurface);
+    }
+  }
+  else if (pic.source == CVaapiProcessedPicture::SKIP_SRC)
+  {
+    m_config.videoSurfaces->ClearRender(pic.videoSurface);
+  }
+  else if (pic.source == CVaapiProcessedPicture::FFMPEG_SRC)
+  {
